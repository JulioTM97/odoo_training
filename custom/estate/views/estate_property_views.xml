<?xml version="1.0"?>
<odoo>

<!-- Podria decirse que aqui se especifica el modelo y que vistas tendra -->
    <record id="test_model_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">test.model</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="test_model_view_search"/>
        <field name="context">{'search_default_active': True}</field>
    </record>
    

    <menuitem id="test_menu_root" name="Real Estate">
        <menuitem id="test_first_level_menu" name="Advertisements">
            <menuitem id="test_model_menu_action" action="test_model_action"/>
        </menuitem>
    </menuitem>


    <record id="test_model_view_tree" model="ir.ui.view">
        <field name="name">test.model.tree</field>
        <field name="model">test.model</field>
        <field name="arch" type="xml">
            <tree string="Test string" decoration-success="state=='offer received' or state=='offer accepted'" decoration-bf="state=='offer accepted'" decoration-muted="state=='sold'">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" optional="hidden"/>
                <field name="state" invisible='1'/>
            </tree>
        </field>
    </record>

    <record id="test_model_view_form" model="ir.ui.view">
        <field name="name">test.model.form</field>
        <field name="model">test.model</field>
        <field name="arch" type="xml">
            <form string="Test">
                <header>
                    <button name="action_sold" type="object" string="Sold" states="new,offer received,offer accepted"/>
                    <button name="action_cancel" type="object" string="Cancel" states="new,offer received,offer accepted"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer received,offer accepted,sold"/>                
                </header>
                
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <group>
                        <group>
                            <field name="type_id" options="{'no_create':True}"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_offer"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area"/>
                                    <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                                    <field name="total_area"/>
                                </group>
                            </page>

                            <page string="Offers">
                                <field name="offer_ids" attrs="{'readonly': ['|', '|', ('state', '=', 'offer accepted'), ('state', '=', 'sold'), ('state', '=', 'canceled')]}"/>
                            </page>   

                            <page string="Other info">
                                <group>
                                    <field name="salesman_id"/>
                                    <field name="buyer_id"/>
                                </group>
                            </page>                         
                        </notebook>                    
                </sheet>
            </form>
        </field>
    </record>

    <record id="test_model_view_search" model="ir.ui.view">
        <field name="name">test.model.search</field>
        <field name="model">test.model</field>
        <field name="arch" type="xml">
            <search string="Tests">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area','>=',self)]" string="living area equal or bigger"/>
                <field name="facades"/>
                <separator/>
                <filter name="inactive" string="Available" domain="[('active', '=', True)]"/>
                <group expand="1" string="Group By">
                    <filter name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>