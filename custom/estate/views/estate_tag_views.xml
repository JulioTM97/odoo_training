<?xml version="1.0"?>
<odoo>
    <record id="estate_tag_action" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">property.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- el atributo parent es para asociar los menus, el valor que se le da es el id del otro menu-->
    <menuitem 
    id="estate_tag_menu_action" 
    name="Property Tag" 
    parent="estate_type_first_level_menu" 
    action="estate_tag_action"/>

    <record id="estate_tag_view_tree" model="ir.ui.view">
        <field name="name">estate.tag.tree</field>
        <field name="model">property.tag</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" string="Property type"/>
            </tree>
        </field>
    </record>


    

</odoo>