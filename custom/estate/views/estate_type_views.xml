<?xml version="1.0"?>
<odoo>
    <record id="estate_type_action" model="ir.actions.act_window">
        <field name="name">Property Type</field>
        <field name="res_model">estate.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- el atributo parent es para asociar los menus, el valor que se le da es el id del otro menu-->
    <menuitem id="estate_type_first_level_menu" name="Settings" parent="test_menu_root">
        <menuitem id="estate_type_menu_action" name="Property Types" action="estate_type_action"/>
    </menuitem>   

    <record id="estate_type_view_tree" model="ir.ui.view">
        <field name="name">estate.type.tree</field>
        <field name="model">estate.type</field>
        <field name="arch" type="xml">
            <tree string="Property type">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record> 

    <record id="estate_type_view_form" model="ir.ui.view">
        <field name="name">estate.type.form</field>
        <field name="model">estate.type</field>
        <field name="arch" type="xml">         
            <form string="Property type">
            <header>
  
            </header>
            
            <sheet>
                <div class='oe_button_box' name="button_box">
                    <button class="oe_stat_button" 
                    type="action" 
                    name="%(estate.estate_offer_action)d" 
                    icon="fa-money">
                        <!-- <span class="o_stat_text">Offers: </span> -->
                            <field name="offer_count" class="oe_inline" widget='statinfo' string='Offers'/>
                    </button>
                </div>
                <h1>
                    <field name="name"/>
                </h1>
                    <field name="property_ids">
                        <tree>
                            <field name="name"/>
                            <field name="expected_price"/>
                            <field name="state"/>
                        </tree>
                    </field>
            </sheet>
            </form>
        </field>
    </record> 

</odoo>